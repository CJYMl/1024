/* pages/user/user.wxss */

.user-modal {
  padding: 0 30rpx;
}

.section {
  height: 90rpx;
  margin-top: 30rpx;
  box-sizing: border-box;
  font-size: 17px;
  position: relative
}

.validate {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.dynamicCode{
  background: linear-gradient(#FDD969, #FBA113);
  width: 218rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #fff;
}
.validCode {
  border:1px solid #cecece;
  border-left:0px;
  box-sizing: border-box;
  width: 218rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #fff;
}
.validate image{
  width: 218rpx;
  height: 90rpx;
}

input {
  border: 1px solid #cecece;
  height: 100%;
  border-radius: 2px;
  padding-left: 104rpx;
  padding-right: 104rpx;
  color: #cecece;
  box-sizing: border-box;
  flex: 1
}

.validate-user { 
  background: linear-gradient(#FDD969, #FBA113);
  width: 100%;
  height: 100%;
  line-height: 90rpx;
  text-align: center;
  font-size: 17px;
  color:#fff
}



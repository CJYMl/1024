/* pages/user/user.wxss */

.user-modal {
  padding: 0 30rpx;
}

.section {
  height: 90rpx;
  margin-top: 30rpx;
  box-sizing: border-box;
  font-size: 17px;
  position: relative
}

.validate {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.validCode {
  background: linear-gradient(#7ac73e, #fcde7e);
  width: 218rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #fff;
}

input {
  border: 1px solid #cecece;
  height: 100%;
  border-radius: 2px;
  padding-left: 104rpx;
  color: #cecece;
  box-sizing: border-box;
  flex: 1
}

.validate-user {
 
  background: #fcde7e;
  width: 100%;
  height: 100%;
  line-height: 90rpx;
  text-align: center;
  font-size: 17px;
  color:#fff
}


